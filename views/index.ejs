<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container my-5">
    <h1 class="text-center">All Blog Posts</h1>

    <div class="text-center mb-4">
      <a href="/" class="btn btn-secondary">Home</a>
    </div>

    <% if (user) { %>
      <p>Welcome, <%= user.name %>!</p>
      <a href="/create-post" class="btn btn-success">Create New Post</a>
      <form action="/logout" method="GET" class="mt-2">
        <button type="submit" class="btn btn-danger">Sign Out</button>
      </form>
    <% } else { %>
      <p>Please <a href="/signin">sign in</a> to create, edit, or delete posts.</p>
    <% } %>

    <div class="row mt-4">
      <% blogs.forEach(blog => { %>
        <div class="col-md-12 my-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.body %></p>
              <p class="text-muted">By: <%= blog.creator_name %></p>
              <p class="text-muted"><small>Posted on: <%= blog.date_created %></small></p>
              <% if (user && blog.creator_user_id === user.id) { %>
                <a href="/edit-post/<%= blog.blog_id %>" class="btn btn-primary">Edit</a>
                <form action="/delete-post/<%= blog.blog_id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
